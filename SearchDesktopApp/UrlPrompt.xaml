<Window x:Class="SearchDesktopApp.UrlPrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:SearchDesktopApp"
        mc:Ignorable="d" 
        WindowStartupLocation="CenterScreen" 
        SizeToContent="WidthAndHeight"
        MinWidth="300"
        MinHeight="100"
        WindowStyle="SingleBorderWindow">
        <StackPanel Margin="5">
                <TextBlock Text="Please enter the API URL:" Margin="5"/>
                <TextBox Name="UrlTextBox" Text="https://localhost:7299" Margin="5"/>
                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Center">
                        <Button MinWidth="100" Content="_Ok" IsDefault="True" Margin="5" Click="ButtonBase_OnClick" />
                </StackPanel>
        </StackPanel>
</Window>
